{% extends '@Library/common/layout.html.twig' %}
{% block body %}

    {# Loop over last books cards #}
    <div class="row">
        {% for book in last_books %}
            <div class="col-lg-3 col-md-4 col-sm-6 portfolio-item">
                <div class="card h-100">
                    <a href="{{ path('book_show', {id: book.id}) }}">
                        <img class="card-img-top"
                             src="{{ asset('bundles/library/img/color-' ~ random([1,2,3,4,5])  ~ '.png') }}"
                             alt="" title="{{ book.title }}">
                    </a>
                    <div class="card-body">
                        <header>
                            <h4 class="card-title">
                                <a href="{{ path('book_show', {id: book.id}) }}">{{ book.title }}</a>
                            </h4>
                            <h5>
                                by <a href="#">{{ book.author }}</a>
                            </h5>
                        </header>

                        <p class="card-text">{{ book.description|length > 150 ? book.description|slice(0, 150) ~ '...' : book.description }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <!-- /.row -->

{% endblock %}

